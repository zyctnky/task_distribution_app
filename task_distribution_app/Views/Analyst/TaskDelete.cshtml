@model task_distribution_app.Models.ViewModels.TaskVM
@{
    ViewBag.Title = "Task Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-bg-light">
                <div class="row">
                    <div class="col-12 d-flex justify-content-between">
                        <h5>Task Sil</h5>
                        <div>
                            <a href="/analyst/task/@Model.id/edit" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil"></i></a>
                            <a href="/analyst" class="btn btn-dark btn-sm"><i class="bi bi-house"></i></a>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-4 col-12 mb-2">
                        <h3>@Model.difficultylevelName</h3>
                        <h4>@Model.title</h4>
                        <p>@Model.description</p>
                        <p>@Model.createdUserFullname / @Model.createdAt</p>
                        <p>@Model.assignedUserFullname</p>
                        <p>@(Model.isComplete == true ? "Tamamlandı" : "Tamamlanmadı")  | @Model.completeDate</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-danger">
                            @using (Html.BeginForm("TaskDeleteForm", "Analyst", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <p>Task silinecek. Onaylıyor musunuz?</p>
                                @Html.HiddenFor(m => Model.id)
                                <button class="btn btn-danger btn-sm"><i class="bi bi-trash3 me-3"></i>ONAYLA</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


