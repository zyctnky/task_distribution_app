@model List<task_distribution_app.Models.ViewModels.TaskVM>
@{
    ViewBag.Title = "Yönetici Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-bg-light">
                <div class="row">
                    <div class="col-12 d-flex justify-content-between">
                        <h5>Task Listesi</h5>
                        <div>
                            <a href="/manager/developer" class="btn btn-dark btn-sm"><i class="bi bi-people me-2"></i>Developer Listesi</a>
                        </div>
                    </div>
                </div>
                <hr />
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger text-center">
                        <span>HATA: @ViewBag.Error</span>
                    </div>
                }
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Oluşturma Tarihi</th>
                                        <th>Oluşturan Kullanıcı</th>
                                        <th>Atanan Developer</th>
                                        <th>Tamamlanma</th>
                                        <th class="text-end">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (task_distribution_app.Models.ViewModels.TaskVM task in Model)
                                    {
                                        <tr>
                                            <td>@task.title</td>
                                            <td>@(((DateTime)task.createdAt).ToString("dd.MM.yyyy"))</td>
                                            <td>@task.createdUserFullname</td>
                                            <td>@task.assignedUserFullname</td>
                                            <td>@(task.isComplete == true ? "Evet" : "Hayır")</td>
                                            <td class="text-end">
                                                <a href="/manager/task/@task.id/details" class="btn btn-info btn-sm me-1"><i class="bi bi-search"></i></a>
                                                <a href="/manager/task/@task.id/edit" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil"></i></a>
                                                <a href="/manager/task/@task.id/delete" class="btn btn-danger btn-sm"><i class="bi bi-trash3"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

