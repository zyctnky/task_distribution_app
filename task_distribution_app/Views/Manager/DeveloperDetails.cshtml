@model task_distribution_app.Models.ViewModels.DeveloperVM
@{
    ViewBag.Title = "Developer Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-bg-light">
                <div class="row">
                    <div class="col-12 d-flex justify-content-between">
                        <h5>Developer Detayları</h5>
                        <div>
                            <a href="/manager/developer" class="btn btn-dark btn-sm"><i class="bi bi-house"></i></a>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-12 mb-2">
                        <h3>@Model.user.fullname</h3>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover caption-top">
                                <caption>Task Listesi</caption>
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Zorluk Seviyesi</th>
                                        <th>Analist</th>
                                        <th>Oluşturma Tarihi</th>
                                        <th class="text-end">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (task_distribution_app.Models.ViewModels.TaskVM task in Model.taskList)
                                    {
                                        <tr>
                                            <td>@task.title</td>
                                            <td>
                                                <button type="button" class="btn btn-secondary disabled btn-sm">@(task.difficultylevelName)</button>
                                            </td>
                                            <td>@task.createdUserFullname</td>
                                            <td>@(((DateTime)task.createdAt).ToString("dd.MM.yyyy"))</td>
                                            <td class="text-end">
                                                <a href="/manager/task/1/details" class="btn btn-info btn-sm me-1"><i class="bi bi-search"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


