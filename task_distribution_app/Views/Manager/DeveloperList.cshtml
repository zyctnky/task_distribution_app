@model List<task_distribution_app.Models.ViewModels.DeveloperVM>
@{
    ViewBag.Title = "Developer Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-bg-light">
                <div class="row">
                    <div class="col-12 d-flex justify-content-between">
                        <h5>Developer Listesi</h5>
                        <div>
                            <a href="/manager" class="btn btn-dark btn-sm"><i class="bi bi-list me-2"></i>Task Listesi</a>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Adı</th>
                                        <th>Son 5 Task Zorluk</th>
                                        <th class="text-end">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (task_distribution_app.Models.ViewModels.DeveloperVM developer in Model)
                                    {
                                        <tr>
                                            <td>@developer.user.fullname</td>
                                            <td>
                                                @foreach (task_distribution_app.Models.ViewModels.TaskVM task in developer.taskList)
                                                {
                                                    <button type="button" class="btn btn-dark disabled btn-sm rounded-0">@(task.difficultylevelName)</button>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <a href="/manager/developer/@developer.user.id/details" class="btn btn-info btn-sm me-1"><i class="bi bi-search"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

